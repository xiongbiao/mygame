<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wind"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFBF4"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title_bar"
        style="@style/title_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageButton
            android:id="@+id/obj_info_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/button_background_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/user_info_top"
            android:textColor="#fff"
            android:textSize="24sp" />

        <Button
            android:id="@+id/user_info_editor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_background_3"
            android:text="@string/user_info_editor"
            android:textColor="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/user_m_icon"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dip" >

        <ImageView
            android:id="@+id/item_avatar"
            style="@style/my_style"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:src="@drawable/camera_icon"
            android:padding="-10dip"
            android:background="@drawable/mylogo"
             />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_content"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.6"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dip" >
        <LinearLayout
            android:id="@+id/register_content_name_layer"
            style="@style/my_edit_layer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_top_round" >
            <TextView
                android:id="@+id/name_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dip"
                android:text="@string/user_info_account"
                android:textColor="@color/text_color_field_content" 
                android:textSize="14sp" />

            <EditText
                android:id="@+id/user_name"
                style="@style/my_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_field_content" />
           <!--  <TextView
                android:id="@+id/pass_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dip"
                android:text="@string/user_info_pass"
                android:textColor="@color/text_color_field_content" 
                android:textSize="14sp" />

            <EditText
                android:id="@+id/user_pass"
                style="@style/my_info"
                android:hint="****"
                android:inputType="textPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_field_content"/> -->
        </LinearLayout>

           <LinearLayout
            android:id="@+id/user_content_pass_layer"
            style="@style/my_edit_layer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_orther_rectangular" >
          <TextView
                android:id="@+id/pass_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dip"
                android:text="@string/user_info_pass"
                android:textColor="@color/text_color_field_content" 
                android:textSize="14sp" />

            <EditText
                android:id="@+id/user_pass"
                style="@style/my_info"
                android:hint="****"
                android:inputType="textPassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_field_content"/>
        </LinearLayout>  
            
        <LinearLayout
            android:id="@+id/register_content_email_layer"
            style="@style/my_edit_layer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_orther_rectangular" >

            <TextView
                android:id="@+id/nickname_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dip"
                android:text="@string/user_info_nickname"
                android:textColor="@color/text_color_field_content" 
                android:textSize="14sp" />

            <EditText
                android:id="@+id/user_nickname"
                style="@style/my_info"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@color/text_color_field_content" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/sex_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dip"
                android:text="@string/user_info_sex"
                android:textColor="@color/text_color_field_content" 
                android:textSize="14sp" />
                <Spinner android:id="@+id/user_sex"
					android:background="@drawable/droplistu"
					android:layout_width="wrap_content"
					android:layout_height="30dp"
					android:layout_centerHorizontal="true"
					android:textColor="@color/text_color_field_content"
					android:textSize="14sp"
			 />
            <!-- <EditText
                android:id="@+id/user_sex"
                style="@style/my_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_field_content"/> -->
        </LinearLayout>

        <LinearLayout
            android:id="@+id/register_content_email_layer"
            style="@style/my_edit_layer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_orther_rectangular" >

            <TextView
                android:id="@+id/age_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dip"
                android:text="@string/user_info_age"
                android:textColor="@color/text_color_field_content" 
                android:textSize="14sp" />

            <EditText
                android:id="@+id/user_age"
                style="@style/my_info"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_field_content"/>
            

            <TextView
                android:id="@+id/integration_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dip"
                android:text="@string/user_info_integration"
                android:textColor="@color/text_color_field_content" 
                android:textSize="14sp" />

            <EditText
                android:id="@+id/user_integration"
                style="@style/my_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_field_content"/>
        </LinearLayout>

