        <LinearLayout
            android:id="@+id/register_content_email_layer"
            style="@style/my_edit_layer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_orther_rectangular" >

            <TextView
                android:id="@+id/email_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dip"
                android:text="@string/user_info_email"
                android:textColor="@color/text_color_field_content" 
                android:textSize="14sp" />

            <EditText
                android:id="@+id/user_email"
                style="@style/my_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_field_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/register_content_password_layer"
            style="@style/my_edit_layer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dip"
            android:background="@drawable/background_bottom_round" >

            <TextView
                android:id="@+id/curriculum_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dip"
                android:text="@string/user_info_curriculum" 
                android:textColor="@color/text_color_field_content" 
                android:textSize="14sp" />

            <EditText
                android:id="@+id/user_curriculum"
                style="@style/my_info"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:textColor="@color/text_color_field_content"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>