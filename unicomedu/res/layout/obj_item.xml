<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="100dip"
	android:background="@drawable/list_selector_background_even"
	android:padding="8dip" android:gravity="center" android:orientation="horizontal">

	<ImageView android:id="@+id/item_avatar" style="@style/photo_style" />
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<LinearLayout android:layout_width="match_parent"
			android:layout_height="wrap_content"  
			android:gravity="center" android:layout_alignParentTop="true"
			android:orientation="horizontal">
			<RelativeLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<ImageView android:id="@+id/item_favorite"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:src="@drawable/favorite_iocn"
					android:layout_alignParentTop="true"
					android:layout_alignParentRight="true" />
				<TextView android:id="@+id/item_title"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="读物名称" android:textColor="@color/text_color_title"
					android:textSize="16sp" android:layout_alignParentTop="true"
					android:layout_alignParentLeft="true"  
					android:layout_toLeftOf="@id/item_favorite"  android:ellipsize="marquee" 
        	android:singleLine="true"
					android:layout_marginRight="10dp" />
			
			</RelativeLayout>

		</LinearLayout>

		<LinearLayout android:layout_width="match_parent"
			android:layout_height="wrap_content" android:gravity="center"  
			android:layout_centerInParent="true" android:orientation="vertical">
			<RelativeLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView android:id="@+id/item_author"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="作者" android:textColor="@color/text_color_info"   android:ellipsize="marquee" 
        	android:singleLine="true"
					android:textSize="14sp" android:layout_below="@id/item_author" />
				<TextView android:id="@+id/item_level"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="英语一、二年级" android:textColor="@color/text_color_info"  
					android:layout_marginRight="20dp" android:ellipsize="marquee" 
        	android:singleLine="true"
					 
					android:textSize="14sp" android:layout_below="@id/item_author" />
			</RelativeLayout>

		</LinearLayout>


		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:gravity="center"
			android:layout_marginTop="10dip"
			android:layout_alignParentBottom="true" android:orientation="horizontal">
			<RelativeLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<ImageView android:id="@+id/item_integral"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:src="@drawable/integral_icon"
					android:layout_alignParentLeft="true"
					android:layout_marginTop="2dip"
					android:layout_marginRight="4dip"
					 />
				<TextView android:id="@+id/item_tv_integral"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="300分" android:textSize="14sp" 
					android:layout_toRightOf="@id/item_integral" android:textColor="@color/text_color_num"
					  />
				<ImageView android:id="@+id/item_browser"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:src="@drawable/browser_icon"
					android:layout_marginRight="4dip"
					android:layout_marginTop="3dip"
					android:layout_centerHorizontal="true"
					 />
				<TextView android:id="@+id/item_tv_browser"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:text="300次" android:textSize="14sp"
					android:layout_toRightOf="@id/item_browser" android:textColor="@color/text_color_num"
					  />
				<ImageView android:id="@+id/item_buy"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:src="@drawable/buy_icon" android:layout_alignParentRight="true"
					android:layout_marginTop="2dip"
					 />
			</RelativeLayout>

		</LinearLayout>











	</RelativeLayout>
</LinearLayout>