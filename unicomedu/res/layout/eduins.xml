<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <erb.unicomedu.ui.FilterExpand
        android:id="@+id/filter_expand"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/list_item_bg"
            android:orientation="vertical" >
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/title_bar" >
                <ImageButton
                    android:id="@+id/eduins_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/button_background_back" />
                <TextView android:id="@+id/eduins_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="越秀区列表"
                    android:textColor="#fff"
                    android:textSize="24sp" />
            </RelativeLayout>
 
              <LinearLayout
                android:id="@+id/edu_ll_xqjs"
                android:layout_width="match_parent"
                android:layout_height="fill_parent" 
                android:background="#fff"
                >
                 <include android:id="@+id/inc_data_loading" layout="@layout/list_view_layout" />
              </LinearLayout>
        </LinearLayout>
    </erb.unicomedu.ui.FilterExpand>


</RelativeLayout>