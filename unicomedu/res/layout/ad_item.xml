<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="110dip" android:layout_height="50dip"
	android:background="#DBB767"
	android:padding="5dip"   android:orientation="vertical">

	<ImageView android:id="@+id/item_avatar"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_marginRight="5dip" android:padding="2dip" />
	<TextView android:id="@+id/item_title" android:layout_width="wrap_content"
		android:layout_height="wrap_content"  
		android:textColor="@color/text_color_title" android:textSize="16sp"
		android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
		android:ellipsize="marquee" android:singleLine="true" />

</LinearLayout>