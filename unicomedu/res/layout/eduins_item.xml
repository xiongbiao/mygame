<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector_background_even"
    android:gravity="left"
    android:orientation="vertical"
    android:padding="10dip" >

		<TextView android:id="@+id/eduins_item_title"
			android:layout_width="wrap_content" android:text="title item"
			android:textSize="18sp"
			android:layout_marginLeft="20dp"
			android:textColor="@color/text_color_title"
			android:layout_height="wrap_content" />
		<TextView android:id="@+id/eduins_item_address"
		    android:layout_marginLeft="20dp"
			android:layout_width="wrap_content" android:text="title item"
			android:layout_height="wrap_content" android:textColor="@color/text_color_field_content"
			android:textSize="16sp" />
</LinearLayout>