<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:background="@drawable/msg_bg"
    android:padding="10dip" >
    <ImageView
        android:id="@+id/item_left_img" 
        android:src="@drawable/teacher_subject_item_left" 
        android:layout_centerVertical="true" android:layout_marginLeft="0dp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
    />

     <TextView
         android:id="@+id/item_title"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="5dp"
         android:layout_toRightOf="@id/item_left_img"
         android:text="系统消息"
         android:textColor="@color/black"
         android:textSize="22sp" />

</RelativeLayout>